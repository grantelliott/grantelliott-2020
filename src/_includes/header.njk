<header class="container py-12">
  {% set activePage = page.url %}
  {% if activePage == '/' %}
    <h1 class="tracking-tight text-2xl md:text-4xl font-bold">
      {{ site.title }}
      <span class="font-normal opacity-25 text-xl md:text-2xl ml-2">{{ title }}</span>
    </h1>
  {% else %}
    <h1 class="tracking-tight text-lg md:text-xl mb-8">
      <a class="opacity-25 md:hover:opacity-100" title="Home" href="/">{{ site.title }} Photo Blog</a>
    </h1>
    <h2 class="tracking-tight text-2xl md:text-4xl font-bold mb-2 md:mb-4">
      {{ title }}
    </h2>
  {% endif %}
  {% if copy %}
    <p class="md:text-lg">{{ copy }}</p>
  {% endif %}
</header>
