<header class="container py-12">
    <h1 class="tracking-tight text-lg md:text-xl mb-8">
      <a class="opacity-25 md:hover:opacity-100" href="/">
      {% set activePage = page.url %}
      {% if activePage == ‘/‘ %}
        {{ site.title }}
      {% else %}
      Home
      {% endif %}
      </a>
    </h1>
    <h2 class="tracking-tight text-2xl md:text-4xl font-bold mb-2 md:mb-4">
      {{ title }}
    </h2>
  {% if copy %}
    <p class="md:text-lg">{{ copy }}</p>
  {% endif %}
</header>
